<div class="container">
  <div class="row">
    <div class="page-header">

      <div class="col-md-3 col-sm-4">
        <div class="text-center">
          <%= image_tag @user.avatar, class: "img-responsive img-circle" %>    
        </div>
      </div> 
      <div class="col-md-9 col-sm-8">
        <h1><%= @user.name %></h1>
        <h4><%= @user.email %></h4>
        <h5><%= @user.intro %></h5>    
        <%if @user.email == current_user.email %> 
        <%= link_to 'Edit Profile', edit_user_path(@user),:class => 'btn btn-primary'%>
        <% end %>  
      </div> 
      <div class="clearfix"></div> 
    </div>
  </div>
</div>
<br>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"> <%= @comment_restaurants.count %> 個已評論餐廳</h3>
  </div>
  <div class="panel-body">

        <%  @comment_restaurants.each  do |restaurant|%>
          <%= link_to restaurant_path(restaurant) do %>
      <div class="my-restaurant">

            <div><%= image_tag restaurant.image, class: " img-rounded" %></div>
            <%= restaurant.name %>
      </div>       
          <% end %>   
        <% end %>    

  </div>
</div> 



