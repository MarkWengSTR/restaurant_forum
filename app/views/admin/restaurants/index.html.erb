<div class="page-header text-center">
  <h1> 後台 </h1>
</div>

<table class="table table-striped table-hover" >

  <thead>
    <tr>
      <th>#</th>
      <th>Category</th>
      <th>Name</th>
      <th>#</th>
    </tr>
  </thead>
  <% @restaurants.each do |restaurant| %>  
  <tbody>
    <tr>
      <th scope="row"><%= restaurant.id %></th>
      <td><%= restaurant.category.name%></td>
      <td><%= restaurant.name %></td>
      <td>
        <%= link_to 'Show', admin_restaurant_path(restaurant) %>
        <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %>
        <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
      </td>
    </tr>  
   </tbody>


  <%end%>
 </table> 
<h4> <%= paginate @restaurants %></h4>

<h4> <%= link_to 'New restaurant', new_admin_restaurant_path, :class => "btn btn-primary" %></h4>
